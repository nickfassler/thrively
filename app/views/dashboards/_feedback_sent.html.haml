%li.feedback.sent{id: "feedback_#{resource.id}"}
  .history-content
    .inner
      %a.pull-right.btn.btn-link.btn-mini.toggle
        %i.icon-angle-down
      = t('.title_html',
          user: resource.receiver.decorator.link_to_profile,
          topic: resource.topic,
          time: time_ago_in_words(resource.created_at))
      .showhide{:id => "showhide_#{resource.id}"}
        .plus
          = image_tag('Plus_666_11px.png', title: 'Plus: what works', alt: 'Plus: what works')
          = resource.plus
        .delta
          = image_tag('Delta_666_11px.png', title: 'Delta: what to improve', alt: 'Delta: what to improve')
          = resource.delta
  %i.icon-retweet