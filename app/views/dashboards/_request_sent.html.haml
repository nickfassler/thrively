.request.sent
  .history-icon
    %i.icon-bullhorn
  .history-content
    %input.pull-right.show{ type: 'submit', :name => "show_#{resource.id}", value: 'Expand', :id => "show_#{resource.id}", :resource => "#{resource.id}", class: 'btn btn-link btn-mini' }
    %input.pull-right.hide{ type: 'submit', :name => "hide_#{resource.id}", value: 'Collapse', :id => "hide_#{resource.id}", :resource => "#{resource.id}", class: 'btn btn-link btn-mini' }
    = t('.title_html',
        user: raw(resource.invitees.map { |invitee| invitee.decorator.link_to_profile }.join(', ')),
        topic: resource.topic,
        time: time_ago_in_words(resource.created_at))
    .showhide{:id => "showhide_#{resource.id}"}
      %i{ class: 'icon-envelope' }
      = resource.message
