- content_for :title, 'Feedback Stream'

- content_for :subheader_nav do
  - if signed_in?
    .action-btns.pull-right
      %a{ href: new_request_path, class: 'btn btn-info btn-large' }
        = t('.request_button')
      %a{ href: new_feedback_path, class: 'btn btn-primary btn-large' }
        = t('.give_button')

- if current_user.has_remaining_invites?
  = link_to 'Invite a friend', new_invite_path

.events
  - @events.each do |event|
    = render event.name_for(current_user), resource: event.resource

.paginate
  = will_paginate @events
