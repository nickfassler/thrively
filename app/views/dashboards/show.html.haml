- content_for :title, 'Feedback Stream'

- if current_user.has_remaining_invites?
  = link_to 'Invite a friend', new_invite_path

- @events.each do |event|
  %div{ class: event.html_classes }
    = event.icon
    = event.header
    - unless current_user.sender_of?(event.resource)
      = event.body

= will_paginate @events
