!!! 5

%head
  %meta(charset='UTF-8')
  = yield :meta
  %title Thrively#{" | #{yield(:title)}" if yield(:title).present?}
  = stylesheet_link_tag :application, media: 'all'
  = csrf_meta_tags

%body
  .navbar.navbar-fixed-top.navbar-inverse
    .navbar-inner
      .container
        = link_to 'Thrively', root_path, class: 'brand'
        .pull-right
          = render 'header_nav'

  #main-content.container
    .app-box
      .app-box-head
        = yield(:subheader_nav)
        %h1
          = yield(:title)
      .app-box-content
        = render 'flashes'
        = yield

    = render 'footer'

  = render 'javascript'
