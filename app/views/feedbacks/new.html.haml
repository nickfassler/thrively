- content_for :title, 'Give Feedback'

= form_for @feedback do |f|
  - if @feedback.request
    = f.hidden_field :request_id
    = @feedback.decorator.html_for_receiver_email
    .topic
      Topic: #{@feedback.request.topic}
  - elsif @receiver_provided
    = @feedback.decorator.html_for_receiver_email
    = hidden_field_tag :receiver_provided, true
    = f.hidden_field :receiver_email

    = f.label :topic, 'Topic'
    = f.text_field :topic, placeholder: 'What is the feedback about?'
  - else
    = f.label :receiver_email, 'Email'
    = f.text_field :receiver_email, placeholder: 'Email'

    = f.label :topic, 'Topic'
    = f.text_field :topic, placeholder: 'What is the feedback about?'

  = f.label :plus, 'Did well'
  = f.text_area :plus, rows: 2, placeholder: 'Explain what was done well'

  = f.label :delta, 'Improve'
  = f.text_area :delta, rows: 2, placeholder: 'Explain areas for improvement'
  %br
  = f.submit 'Send', class: 'btn'
