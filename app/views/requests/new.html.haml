- content_for :title, 'Request Feedback'

.request-form
  = semantic_form_for @request do |f|
    = f.semantic_errors
    = email_form_fields
    = f.input :topic, label: 'Feedback Topic',
        placeholder: 'What do you need feedback about?'
    = f.input :message, label: 'Email Message', input_html: { rows: 3 },
        placeholder: 'Send a note to your recipients about how your feedback can help, and any specifics about what you hope to learn.'

    %br
    = f.submit 'Send request', class: 'btn'
