- content_for :title, 'Profile'

= render 'return_to_dash'

.pull-right
  = link_to 'Edit your profile', edit_user_path(current_user), class: 'btn'

.profile
  .avatar
    = filepicker_image_tag current_user.avatar_url, w: 50
  .name
    Full name: #{current_user.name}
  .email
    Email: #{current_user.email}
  .username
    Username: #{current_user.username}
  .password
    Password: *****
